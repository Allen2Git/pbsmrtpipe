<?xml version="1.0" encoding="utf-8" ?>
<chunk-operator id="pbsmrtpipe.operators.chunk_modification">

    <task-id>pbsmrtpipe.tasks.compute_modifications_scatter</task-id>

    <scatter>
        <scatter-task-id>pbsmrtpipe.tasks.align_scatter</scatter-task-id>
        <chunks>
            <chunk out="$chunk.movie_fofn_id" in="pbsmrtpipe.tasks.compute_modifications_scatter:0"/>
            <chunk out="$chunk.rgn_fofn_id" in="pbsmrtpipe.tasks.compute_modifications_scatter:1"/>
            <chunk out="$chunk.ref_id" in="pbsmrtpipe.tasks.compute_modifications_scatter:2" />
        </chunks>
    </scatter>
    <!-- Define the Gather Mechanism -->
    <gather>
        <chunks>
            <chunk>
                <gather-task-id>pbsmrtpipe.tasks.gather_cmph5</gather-task-id>
                <chunk-key>$chunk.cmp_h5_id</chunk-key>
                <task-output>pbsmrtpipe.tasks.compute_modifications_scatter:0</task-output>
            </chunk>
        </chunks>
    </gather>
</chunk-operator>