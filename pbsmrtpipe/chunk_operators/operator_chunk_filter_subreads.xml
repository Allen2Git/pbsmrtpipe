<?xml version="1.0" encoding="utf-8" ?>
<chunk-operator id="pbsmrtpipe.operators.chunk_filter_subreads">

    <task-id>pbsmrtpipe.tasks.filter_subreads</task-id>

    <scatter>
        <scatter-task-id>pbsmrtpipe.tasks.filter_subreads_scatter</scatter-task-id>
        <chunks>
            <chunk out="$chunk.fofn_id" in="pbsmrtpipe.tasks.filter_subreads:0"/>
            <chunk out="$chunk.fofn_report_id" in="pbsmrtpipetasks.filter_subreads:1" />
            <chunk out="$chunk.rgn_fofn_id" in="pbsmrtpipe.tasks.filter_subreads:2"/>
            <chunk out="$chunk.rgn_report_id" in="pbsmrtpipetasks.filter_subreads:3" />
        </chunks>
    </scatter>
    <!-- Define the Gather Mechanism -->
    <gather>
        <chunks>
            <chunk>
                <gather-task-id>pbsmrtpipe.tasks.gather_fastq</gather-task-id>
                <chunk-key>$chunk.fastq_id</chunk-key>
                <task-output>pbsmrtpipe.tasks.filter_subreads:0</task-output>
            </chunk>
            <chunk>
                <gather-task-id>pbsmrtpipe.tasks.gather_fasta</gather-task-id>
                <chunk-key>$chunk.fasta_id</chunk-key>
                <task-output>pbsmrtpipe.tasks.filter_subreads:1</task-output>
            </chunk>
        </chunks>
    </gather>
</chunk-operator>